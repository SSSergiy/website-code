{
  "name": "website-code-hugo",
  "version": "1.0.0",
  "description": "Hugo-based static website generator",
  "type": "module",
  "scripts": {
    "fetch": "node scripts/fetch-r2.js",
    "generate": "node scripts/generate-pages.js",
    "dev": "npm run fetch && npm run generate && hugo server --port 1313",
    "build": "npm run fetch && npm run generate && hugo --minify",
    "clean": "hugo --cleanDestinationDir",
    "preview": "hugo server --port 1313 --navigateToChanged"
  },
  "dependencies": {
    "dotenv": "^16.0.0",
    "node-fetch": "^3.3.2",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.0",
    "postcss-sort-media-queries": "^5.2.0",
    "sass": "^1.85.1"
  }
}

