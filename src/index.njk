{% if client.sections and client.sections.length > 0 %}
{% for section in client.sections %}
{% if section.enabled %}
{% if section.type == "hero" %}
<!-- Hero Section -->
<section class="relative bg-gradient-to-br from-blue-600 to-purple-700 text-white py-20">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center">
      <h1 class="text-4xl md:text-6xl font-bold mb-6">
        {{ section.data.title }}
      </h1>
      <p class="text-xl md:text-2xl mb-8 text-blue-100 max-w-3xl mx-auto">
        {{ section.data.subtitle }}
      </p>

      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        {% if section.data.ctaButton %}
        <a href="{{ section.data.ctaButton.href }}"
          class="bg-white text-blue-600 px-8 py-4 rounded-lg font-semibold text-lg hover:bg-gray-100 transition-colors duration-200">
          {{ section.data.ctaButton.text }}
        </a>
        {% endif %}

        {% if section.data.secondaryButton %}
        <a href="{{ section.data.secondaryButton.href }}"
          class="border-2 border-white text-white px-8 py-4 rounded-lg font-semibold text-lg hover:bg-white hover:text-blue-600 transition-colors duration-200">
          {{ section.data.secondaryButton.text }}
        </a>
        {% endif %}
      </div>
    </div>
  </div>
</section>
{% endif %}

{% if section.type == "about" %}
<!-- About Section -->
<section class="py-16 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-6">
        {{ section.data.title }}
      </h2>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto">
        {{ section.data.description }}
      </p>
    </div>

    {% if section.data.features %}
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {% for feature in section.data.features %}
      <div class="text-center p-6">
        <div class="text-4xl mb-4">{{ feature.icon }}</div>
        <h3 class="text-xl font-semibold text-gray-900 mb-2">{{ feature.title }}</h3>
        <p class="text-gray-600">{{ feature.description }}</p>
      </div>
      {% endfor %}
    </div>
    {% endif %}
  </div>
</section>
{% endif %}

{% if section.type == "services" %}
<!-- Services Section -->
<section class="py-16 bg-gray-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-6">
        {{ section.data.title }}
      </h2>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto">
        {{ section.data.subtitle }}
      </p>
    </div>

    {% if section.data.services %}
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {% for service in section.data.services %}
      <div class="bg-white p-8 rounded-xl shadow-sm hover:shadow-md transition-shadow duration-200">
        <div class="text-4xl mb-4">{{ service.icon }}</div>
        <h3 class="text-xl font-semibold text-gray-900 mb-2">{{ service.title }}</h3>
        <p class="text-gray-600 mb-4">{{ service.description }}</p>
        <div class="text-2xl font-bold text-blue-600 mb-4">{{ service.price }}</div>
        {% if service.features %}
        <ul class="space-y-2">
          {% for feature in service.features %}
          <li class="flex items-center text-sm text-gray-600">
            <span class="w-2 h-2 bg-blue-500 rounded-full mr-3"></span>
            {{ feature }}
          </li>
          {% endfor %}
        </ul>
        {% endif %}
      </div>
      {% endfor %}
    </div>
    {% endif %}
  </div>
</section>
{% endif %}

