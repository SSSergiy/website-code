<header class="bg-white shadow-sm border-b">
  <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <!-- Logo -->
      <div class="flex items-center">
        {% if site.logo %}
        <img src="{{ site.logo }}" alt="{{ site.title }}" class="h-8 w-auto">
        {% else %}
        <span class="text-xl font-bold text-gray-900">{{ site.title }}</span>
        {% endif %}
      </div>

      <!-- Navigation -->
      <div class="hidden md:flex space-x-8">
        {% for page in site.pages %}
        {% if page.published %}
        <a href="{{ page.slug }}" class="text-gray-600 hover:text-gray-900 px-3 py-2 text-sm font-medium">
          {{ page.title }}
        </a>
        {% endif %}
        {% endfor %}
      </div>

      <!-- Mobile menu button -->
      <div class="md:hidden">
        <button type="button" data-mobile-menu-toggle class="text-gray-600 hover:text-gray-900"
          aria-label="Toggle menu">
          <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>

    <!-- Mobile menu -->
    <div data-mobile-menu class="hidden md:hidden border-t">
      <div class="px-2 pt-2 pb-3 space-y-1">
        {% for page in site.pages %}
        {% if page.published %}
        <a href="{{ page.slug }}" class="block px-3 py-2 text-gray-600 hover:text-gray-900 hover:bg-gray-50 rounded-md">
          {{ page.title }}
        </a>
        {% endif %}
        {% endfor %}
      </div>
    </div>
  </nav>
</header>