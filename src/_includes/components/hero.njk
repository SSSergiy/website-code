<section class="py-16 text-center bg-cover bg-center" {% if section.data.backgroundImage
	%}style="background-image: url('{{ client.buildImageUrl(section.data.backgroundImage) }}')" {% endif %}>
	<div class="max-w-4xl mx-auto px-4">
		<h1 class="text-4xl font-bold text-white mb-4">{{ section.data.title or section.data.heading }}</h1>
		{% if section.data.subtitle or section.data.subheading %}
		<p class="text-xl text-gray-200 mb-8">{{ section.data.subtitle or section.data.subheading }}</p>
		{% endif %}
		{% if section.data.buttonText and section.data.buttonLink %}
		<a href="{{ section.data.buttonLink }}"
			class="inline-block bg-blue-600 text-white px-6 py-3 rounded-lg text-lg font-medium hover:bg-blue-700 transition-colors">
			{{ section.data.buttonText }}
		</a>
		{% endif %}
	</div>
</section>