<section class="relative bg-gradient-to-br from-blue-50 to-indigo-100 py-20">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center">
      <h1 class="text-4xl md:text-6xl font-bold text-gray-900 mb-6">
        {{ hero.title or site.title }}
      </h1>
      <p class="text-xl text-gray-600 mb-8 max-w-2xl mx-auto">
        {{ hero.description or site.description }}
      </p>
      
      {% if hero.buttons %}
        <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
          {% for button in hero.buttons %}
            <a 
              href="{{ button.url }}" 
              class="
                {% if button.primary %}
                  bg-blue-600 hover:bg-blue-700 text-white
                {% else %}
                  bg-white hover:bg-gray-50 text-blue-600 border border-blue-600
                {% endif %}
                font-semibold py-3 px-8 rounded-lg transition-colors
              "
            >
              {{ button.text }}
            </a>
          {% endfor %}
        </div>
      {% endif %}
    </div>
    
    {% if hero.image %}
      <div class="mt-12">
        <img 
          src="{{ hero.image }}" 
          alt="{{ hero.title }}"
          class="rounded-lg shadow-2xl mx-auto max-w-4xl w-full"
        >
      </div>
    {% endif %}
  </div>
</section>

