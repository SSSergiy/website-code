---
# ПРИМЕР кастомного клиента
# Переименуй этот файл в: client-001.njk (удали .example)
# И измени client-001 на реальный userId клиента

pagination:
  data: clients
  size: 1
  alias: client
  filter:
    - id: "client-001"  # ← ЗАМЕНИ на реальный userId
permalink: "/{{ client.id }}/index.html"
layout: layouts/clients/client-001/base.njk
---

{% set site = client.site %}
{% set hero = client.hero or {} %}

<!-- Кастомный Hero для этого клиента -->
{% include "components/clients/client-001/hero.njk" %}

<!-- Кастомный контент -->
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
  <section class="mb-16">
    <h2 class="text-4xl font-bold text-purple-900 mb-6">
      Добро пожаловать на уникальный сайт!
    </h2>
    <p class="text-lg text-gray-700">
      Этот дизайн создан специально для этого клиента.
    </p>
  </section>

  <!-- Страницы клиента -->
  {% if client.pages %}
  {% for page in client.pages %}
  {% if page.published %}
  <section id="{{ page.slug }}" class="mb-16">
    <h2 class="text-3xl font-bold text-purple-800 mb-6">{{ page.title }}</h2>
    <div class="prose prose-lg max-w-none">
      {{ page.content | safe }}
    </div>
  </section>
  {% endif %}
  {% endfor %}
  {% endif %}
</div>

<!-- Галерея (если есть) -->
{% if client.images %}
<section class="py-16 bg-purple-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <h2 class="text-3xl font-bold text-center text-purple-900 mb-12">Галерея</h2>
    <div class="image-gallery">
      {% for image in client.images %}
      <div class="gallery-item fade-in">
        <img src="https://pub-a6698d33e75a45ebb75c9b00d0c3ce2a.r2.dev/clients/{{ client.id }}/images/{{ image }}"
          alt="{{ image }}" loading="lazy" class="rounded-lg shadow-lg">
      </div>
      {% endfor %}
    </div>
  </div>
</section>
{% endif %}

