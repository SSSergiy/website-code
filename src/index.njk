---
layout: layouts/default/base.njk
title: Главная
---

<!-- Hero Section -->
{% include "components/default/hero.njk" %}

<!-- Content Sections -->
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
  {% if client.pages %}
  {% for page in client.pages %}
  {% if page.published %}
  <section id="{{ page.slug }}" class="mb-16">
    <h2 class="text-3xl font-bold text-gray-900 mb-6">{{ page.title }}</h2>
    <div class="prose prose-lg max-w-none">
      {{ page.content | safe }}
    </div>
  </section>
  {% endif %}
  {% endfor %}
  {% endif %}
</div>

<!-- Gallery Section -->
{% if client.images and client.images.length > 0 %}
<section id="gallery" class="py-16 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <h2 class="text-3xl font-bold text-center text-gray-900 mb-12">Галерея;</h2>
    <div class="image-gallery">
      {% for image in client.images %}
      <div class="gallery-item fade-in">
        <img src="https://pub-a6698d33e75a45ebb75c9b00d0c3ce2a.r2.dev/clients/{{ client.id }}/images/{{ image }}"
          alt="{{ image }}" loading="lazy">
      </div>
      {% endfor %}
    </div>
  </div>
</section>
{% endif %}

<!-- Features Section -->
{% if client.features %}
<section class="bg-gray-50 py-16">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <h2 class="text-3xl font-bold text-center text-gray-900 mb-12">Наши преимущества</h2>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {% for feature in client.features %}
      <div class="bg-white p-6 rounded-lg shadow-sm">
        {% if feature.icon %}
        <div class="text-4xl mb-4">{{ feature.icon }}</div>
        {% endif %}
        <h3 class="text-xl font-semibold text-gray-900 mb-2">{{ feature.title }}</h3>
        <p class="text-gray-600">{{ feature.description }}</p>
      </div>
      {% endfor %}
    </div>
  </div>
</section>
{% endif %}