<!-- ПРИМЕР кастомного header для client-001 -->
<!-- Переименуй этот файл: удали .example -->

<header class="bg-gradient-to-r from-purple-600 to-pink-600 text-white py-6 shadow-lg">
  <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center">
      <!-- Logo -->
      <div class="flex items-center">
        <span class="text-2xl font-bold">🎨 {{ site.title }}</span>
      </div>

      <!-- Navigation -->
      <div class="hidden md:flex space-x-6">
        <a href="#" class="hover:text-purple-200 transition-colors">Главная</a>
        {% for page in site.pages %}
        {% if page.published %}
        <a href="#{{ page.slug }}" class="hover:text-purple-200 transition-colors">
          {{ page.title }}
        </a>
        {% endif %}
        {% endfor %}
      </div>
    </div>
  </nav>
</header>

