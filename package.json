{
  "name": "website-code",
  "version": "1.0.0",
  "description": "Static website generator for multi-tenant CMS clients",
  "type": "module",
  "scripts": {
    "dev": "npm-run-all clean build:vite --parallel dev:*",
    "dev:11ty": "eleventy --serve",
    "dev:vite": "vite",
    "build": "npm-run-all clean build:*",
    "build:vite": "cross-env NODE_ENV=production vite build",
    "build:11ty": "cross-env NODE_ENV=production eleventy",
    "clean": "cross-env rm -rf _site || echo 'Clean directory'",
    "preview": "vite preview"
  },
  "dependencies": {
    "@11ty/eleventy": "^3.0.0",
    "@aws-sdk/client-s3": "^3.0.0",
    "nunjucks": "^3.2.4",
    "dotenv": "^16.0.0"
  },
  "devDependencies": {
    "vite": "^5.0.0",
    "autoprefixer": "^10.4.20",
    "npm-run-all": "^4.1.5",
    "sass": "^1.69.0",
    "postcss-sort-media-queries": "^5.2.0",
    "cross-env": "^7.0.3",
    "fast-glob": "^3.3.2",
    "imagemin": "^8.0.1",
    "imagemin-webp": "^8.0.0",
    "sharp": "^0.33.0",
    "svgo": "^3.0.0",
    "vite-plugin-image-optimizer": "^1.1.7"
  }
}

